{
  "name": "backendgraphqlportfolio",
  "version": "1.0.0",
  "description": "Backend GraphQL pour portfolio personnel avec Node.js, TypeScript et MongoDB",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "create-admin": "ts-node src/utils/createAdmin.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:dev": "docker-compose up -d",
    "docker:dev:build": "docker-compose up --build -d",
    "docker:dev:down": "docker-compose down",
    "docker:dev:logs": "docker-compose logs -f backend",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml up --build -d",
    "docker:prod:down": "docker-compose -f docker-compose.prod.yml down",
    "docker:clean": "docker-compose down -v",
    "docker:reset": "docker-compose down -v && docker-compose up --build -d"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Doja-oual/BackendGraphQLPortfolio.git"
  },
  "keywords": [
    "graphql",
    "portfolio",
    "typescript",
    "mongodb",
    "apollo-server",
    "express",
    "jwt",
    "rest-api"
  ],
  "author": "Doja Oualla",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Doja-oual/BackendGraphQLPortfolio/issues"
  },
  "homepage": "https://github.com/Doja-oual/BackendGraphQLPortfolio#readme",

  "dependencies": {
    "@apollo/server": "^4.11.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.9.0",
    "graphql-tag": "^2.12.6",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.7.5",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
